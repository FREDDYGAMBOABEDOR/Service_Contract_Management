<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_service_contract_tree" model="ir.ui.view">
        <field name="name">service.contract.tree</field>
        <field name="model">service.contract</field>
        <field name="arch" type="xml">
            <tree string="Contratos de Servicio" decoration-success="state=='active'" 
                  decoration-danger="state=='expired'" decoration-muted="state=='draft'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="monthly_fee" widget="monetary"/>
                <field name="total_invoiced" widget="monetary" sum="Total Facturado"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-danger="state == 'expired'"
                       decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>
    <record id="view_service_contract_form" model="ir.ui.view">
        <field name="name">service.contract.form</field>
        <field name="model">service.contract</field>
        <field name="arch" type="xml">
            <form string="Contrato de Servicio">
                <header>
                    <button name="action_activate" string="Activar" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="generate_monthly_invoice" string="Generar Factura Mensual" 
                            type="object" class="oe_highlight" invisible="state != 'active'"/>
                    <button name="action_view_invoices" string="Ver Facturas" type="object" 
                            class="btn-secondary" invisible="invoice_count == 0"/>
                    <button name="action_set_to_draft" string="Volver a Borrador" 
                            type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,active,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" 
                                class="oe_stat_button" icon="fa-file-text-o">
                            <field name="invoice_count" widget="statbutton" string="Facturas"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="monthly_fee" widget="monetary"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="last_invoice_date" readonly="1"/>
                            <field name="total_invoiced" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Facturas" name="invoices">
                            <field name="invoice_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_date"/>
                                    <field name="amount_total" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_service_contract_search" model="ir.ui.view">
        <field name="name">service.contract.search</field>
        <field name="model">service.contract</field>
        <field name="arch" type="xml">
            <search string="Buscar Contratos">
                <field name="name" string="Contrato" 
                       filter_domain="[('name', 'ilike', self)]"/>
                <field name="partner_id" string="Cliente"/>
                <filter string="Borrador" name="filter_draft" 
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Activos" name="filter_active" 
                        domain="[('state', '=', 'active')]"/>
                <filter string="Expirados" name="filter_expired" 
                        domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="Inicio Este Mes" name="filter_start_this_month" 
                        domain="[('start_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('start_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <filter string="Fin Este Mes" name="filter_end_this_month" 
                        domain="[('end_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('end_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Fecha de Inicio" name="group_start_date" 
                        context="{'group_by': 'start_date'}"/>
                <filter string="Cliente" name="group_partner" 
                        context="{'group_by': 'partner_id'}"/>
                <filter string="Estado" name="group_state" 
                        context="{'group_by': 'state'}"/>
            </search>
        </field>
    </record>

    <record id="action_service_contract" model="ir.actions.act_window">
        <field name="name">Contratos de Servicio</field>
        <field name="res_model">service.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer contrato de servicio
            </p>
            <p>
                Gestiona contratos de mantenimiento y su facturaci√≥n mensual.
            </p>
        </field>
    </record>

    <menuitem id="menu_service_contract_root" 
              name="Contratos de Servicio" 
              sequence="10"/>
    
    <menuitem id="menu_service_contract" 
              name="Contratos" 
              parent="menu_service_contract_root" 
              action="action_service_contract" 
              sequence="10"/>

    <record id="seq_service_contract" model="ir.sequence">
        <field name="name">Secuencia Contrato de Servicio</field>
        <field name="code">service.contract</field>
        <field name="prefix">CTR/</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
    </record>

    <record id="cron_update_contract_states" model="ir.cron">
        <field name="name">Actualizar Estados de Contratos</field>
        <field name="model_id" ref="model_service_contract"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_contract_states()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>

</odoo>
